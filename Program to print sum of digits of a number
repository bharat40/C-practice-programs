#include<stdio.h>  // sum of digits
int main()
{
    int num, sum = 0;
    int i, l;
    printf("Enter a number = ");
    scanf("%d",&num);
    int n = num;
    while(num>0)
    {
        l = num%10;
        sum = sum + l;
        num=num/10;

    }
    printf("Sum of digits of %d = %d",n, sum);

    return 0;
}
